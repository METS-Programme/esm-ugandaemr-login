{
  "name": "@ugandaemr/esm-login-app",
  "version": "5.1.0",
  "license": "MPL-2.0",
  "description": "The login microfrontend for UgandaEMR 4.x",
  "browser": "dist/esm-ugandaemr-login.js",
  "main": "src/index.ts",
  "source": true,
  "scripts": {
    "start": "openmrs develop --backend https://ugandaemr-backend.mets.or.ug --port 5050",
    "serve": "webpack serve --mode=development",
    "debug": "npm run serve",
    "test": "cross-env TZ=UTC jest --config jest.config.js --verbose false --passWithNoTests",
    "test:watch": "cross-env TZ=UTC jest --watch --config jest.config.js",
    "build": "webpack --mode=production",
    "build:development": "webpack --mode=development",
    "analyze": "webpack --mode=production --env analyze=true",
    "typescript": "tsc",
    "lint": "TIMING=1 eslint src --ext ts,tsx",
    "extract-translations": "i18next 'src/**/*.component.tsx'",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "verify": "turbo lint typescript coverage",
    "ci:publish": "lerna publish from-package --yes",
    "ci:prepublish": "lerna publish from-package --no-git-reset --yes --dist-tag next",
    "release": "lerna version --no-git-tag-version"
  },
  "keywords": [
    "openmrs",
    "microfrontends"
  ],
  "browserslist": [
    "extends browserslist-config-openmrs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/METS-Programme/esm-ugandaemr-login.git"
  },
  "bugs": {
    "url": "https://github.com/METS-Programme/esm-ugandaemr-login/issues"
  },
  "homepage": "https://github.com/METS-Programme/esm-ugandaemr-login#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@carbon/react": "^1.12.0",
    "lodash-es": "^4.17.21"
  },
  "peerDependencies": {
    "@openmrs/esm-framework": "*",
    "react": "18.x",
    "react-dom": "18.x",
    "react-i18next": "11.x",
    "react-router-dom": "6.x",
    "rxjs": "6.x"
  },
  "devDependencies": {
    "@openmrs/esm-framework": "next",
    "@openmrs/webpack-config": "^5.1.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.78",
    "@swc/jest": "^0.2.29",
    "@testing-library/dom": "^8.20.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.3",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/webpack-env": "^1.18.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-config-ts-react-important-stuff": "^3.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "i18next": "^19.9.2",
    "i18next-parser": "^5.4.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.1.0",
    "jest-cli": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "lerna": "5.6.2",
    "openmrs": "next",
    "prettier": "^2.8.8",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-i18next": "^11.16.9",
    "react-router-dom": "^6.3.0",
    "rxjs": "^6.5.3",
    "swr": "^2.0.1",
    "turbo": "^1.10.12",
    "typescript": "^5.1.6",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  },
  "packageManager": "yarn@3.6.2"
}
