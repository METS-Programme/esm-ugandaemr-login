{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es2015",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015",
      "es2015.promise",
      "es2016.array.include",
      "es2018",
      "es2020",
      "es2021",
      "es2022"
    ],
    "noEmit": true
  },
  "include": ["src/**/*", "jest.config.js"]
}
